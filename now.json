{
	"version": 2,
	"alias": ["wagecall.com", "wagecall"],
	"build": {
		"env": {
			"PUBLIC_URL": "https://wagecall.com",
			"AUTH_PUBLIC_URL": "/static/auth",
			"SH_SESSION_SECRET": "@app-session-secret",
			"SH_TWILIO_ACCOUNT_SID": "@twilio-account-sid",
			"SH_TWILIO_AUTH_TOKEN": "@twilio-auth-token",
			"SH_TWILIO_PROXY_SERVICE_SID": "@twilio-proxy-service-sid",
			"AUTH0_DOMAIN": "@auth0-domain",
			"AUTH0_CLIENT_ID": "@auth0-client-id",
			"SH_AUTH0_CLIENT_SECRET": "@auth0-client-secret",
			"REACT_APP_SENTRY_DSN": "@sentry-dsn",
			"SENTRY_DSN": "@sentry-dsn",
			"STRIPE_PUBLIC_KEY": "",
			"STRIPE_SECRET_KEY": ""
		}
	},
	"builds": [
		{
			"src": "packages/app/next.config.js",
			"use": "@now/next"
		},
		{
			"src": "packages/auth/package.json",
			"use": "@now/static-build",
			"config": { "distDir": "build" }
		}
	],
	"routes": [
		{ "src": "/static/auth/(.*)", "dest": "/packages/auth/$1" },
		{ "src": "(.*)", "dest": "/packages/app/$1", "continue": true },
		{
			"src": "^/favicon.ico",
			"dest": "/packages/app/static/favicon.ico"
		}
	]
}
