{
	"name": "wagecall",
	"version": "1.0.0",
	"description": "Wagecall project monorepo",
	"repository": "git@gitlab.com:web-doodle/wagecall.git",
	"author": "Ryan Soury <ryan@webdoodle.com.au>",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"homepage": "https://www.wagecall.com/",
	"engines": {
		"node": ">= 12.14.0"
	},
	"scripts": {
		"clean": "lerna run --parallel clean",
		"build": "lerna run --parallel build",
		"dev:app": "lerna run --scope @wagecall/app --parallel dev",
		"dev:auth": "lerna run --scope @wagecall/auth --parallel start",
		"start:app": "lerna run --scope @wagecall/app --parallel start",
		"build:app": "lerna run --scope @wagecall/app build",
		"build:auth": "lerna run --scope @wagecall/auth build",
		"test:app": "lerna run --scope @wagecall/app test",
		"test:auth": "lerna run --scope @wagecall/auth test",
		"clean:app": "lerna run --scope @wagecall/app clean",
		"clean:auth": "lerna run --scope @wagecall/auth clean && rimraf ./pages/*",
		"auth-pages": "gulp prepare:auth",
		"lint": "eslint -c ./.eslintrc.js \"./**/*.{js,jsx,ts,tsx,mjs}\"",
		"format": "prettier --write \"./**/*.{js,jsx,mjs,ts,tsx,json,css,scss,md}\""
	},
	"dependencies": {},
	"devDependencies": {
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-plugin-babel": "^5.3.0",
		"eslint-plugin-baseui": "^9.71.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jest": "^23.8.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-react": "^7.19.0",
		"gulp": "^4.0.2",
		"gulp-rename": "^2.0.0",
		"husky": "^4.2.5",
		"lerna": "^3.20.2",
		"lint-staged": "^10.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"./**/*.+(js|jsx)": [
			"yarn lint --fix"
		],
		"./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"yarn format"
		]
	}
}
