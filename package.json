{
	"name": "wagecall",
	"version": "1.0.0",
	"description": "Wagecall Repository",
	"private": true,
	"author": "Ryan Soury <ryan@webdoodle.com.au>",
	"repository": {
		"type": "git",
		"url": "git@https://gitlab.com/web-doodle/wagecall.git"
	},
	"homepage": "https://wagecall.com/",
	"scripts": {
		"dev": "next",
		"build": "next build",
		"start": "next start",
		"test": "jest --colors --verbose --no-cache --watch",
		"lint": "eslint -c ./.eslintrc.js \"./**/*.{js,jsx,ts,tsx,mjs}\"",
		"format": "prettier --write \"./**/*.{js,jsx,mjs,ts,tsx,json,css,scss,md}\""
	},
	"dependencies": {
		"axios": "^0.19.2",
		"axios-retry": "^3.1.6",
		"baseui": "^9.71.0",
		"country-list": "^2.2.0",
		"formik": "^2.1.4",
		"formik-wizard": "^3.1.2",
		"libphonenumber-js": "^1.7.50",
		"next": "latest",
		"react": "^16.8.0",
		"react-albus": "^2.0.0",
		"react-copy-to-clipboard": "^5.0.2",
		"react-dom": "^16.8.0",
		"styletron-engine-atomic": "^1.1.2",
		"styletron-react": "^5.0.1",
		"yup": "^0.28.4"
	},
	"devDependencies": {
		"babel-eslint": "^10.1.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-plugin-babel": "^5.3.0",
		"eslint-plugin-baseui": "^9.71.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-react": "^7.19.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.1.7",
		"prettier": "^2.0.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"./**/*.+(js|jsx)": [
			"yarn lint --fix",
			"git add"
		],
		"./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"yarn format",
			"git add"
		]
	}
}
